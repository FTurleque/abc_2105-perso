<Window x:Class="NombreMystereWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NombreMystereWPF"
        mc:Ignorable="d"
        Title="Le nombre mystère" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid Margin="12">
        <StackPanel>
            <TextBlock Text="J'ai choisi un nombre entre 1 et 20, trouve-le !"/>
            <TextBlock x:Name="tbInfo"/>
            <TextBlock x:Name ="tbNbEssais" Text="Nb essais : 0"/>
            <TextBox x:Name="tbEssai"/>
            <Button x:Name="btValider" Content="Valider" Click="btValider_Click"></Button>
            <Button x:Name="btNouvellePartie" Content="Nouvelle Partie" Click="btNouvellePartie_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
